    <body>
        <div id="ticket" style="background-image: url('{{ asset('bundles/swdmadrid/src/img/ticket_mswd_min.png') }}')">
            <div class="lateral">
                <div class="textoLateralIzq">
                    nº {{ numeroEntrada }}
                </div>
            </div>
            <div class="centro">
                <center>
                    {{ participante.nombre ~ ' ' ~ participante.apellidos }}<br/>
                    {{ participante.email }}
                </center>
            </div>
            <div class="contenedorQr">
                <img src="{{ qrcode_url(url('comprobarParticipante', {'id': participante.id})) }}" />
            </div>
            <div class="lateral">
                <div class="textoLateralDer">
                    nº {{ numeroEntrada }}
                </div>
            </div>
        </div>
