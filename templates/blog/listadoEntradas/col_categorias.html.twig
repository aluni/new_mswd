<div class="col-md-3 sidebar sidebar-left">
    <div class="inner">
        <div class="block">
            <h4 class="title-divider">
                Buscar<span class="inverso">| Search</span>
            </h4>    
            <div class="input-group">
                <input type="search" class="form-control" id="search-field" ng-model="filtro.title">
                <span class="input-group-btn">
                    <button class="btn back-to-top" type="button"><i class="fa fa-search"></i></button>
                </span>
            </div>
        </div>
        <br/>
        <div class="block">
            <h4 class="title-divider">
                Etiquetas <span class="inverso">| Tags</span>
                <a data-toggle="collapse" href="#collapse_etiquetas">
                    <i class="fa fa-chevron-down"></i>
                </a>
            </h4>
            <div id="collapse_etiquetas" class="collapse in"> 
                <a ng-repeat="label in labels" class="btn btn-xs btn-estud margin-bottom-10 margin-right-10" 
                   ng-click="anadirEtiqueta(label.nombre)" href="#">
                    [[ label.nombre ]] <span class="inverso">([[ label.contador ]])</span>
                </a>
            </div>
        </div>
    </div>
</div>
