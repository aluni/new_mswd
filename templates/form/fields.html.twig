{% block form_row %}
    {% if (block_prefixes[1] == 'checkbox') %}
        <!-- Checkboxes -->
        {% include "form/checkbox.html.twig" %}
    {% elseif ((block_prefixes[1] == 'choice') and expanded) %}
        <!-- Radiobuttons -->
        {% include "form/radiobutton.html.twig" %}
    {% else %}
        <!--  Text, number, email y textareas  -->
        <div class="form-group text-center"
            {% if label_attr.hide is defined %} ng-hide="{{ label_attr.hide }}" {% endif %}
            {% if label_attr.descripcion is defined %} data-toggle="tooltip"  data-placement="top"  data-original-title="{{ label_attr.descripcion|trans }}"{% endif %}
            {% if label_attr.width is defined %} style="max-width: {{ label_attr.width }}" {% endif %}> 
            <label for="{{ full_name }}" class="sr-only">{{ label|trans }}</label>
            {% include "form/input.html.twig" %}
        </div>
    {% endif %}
{% endblock %}

{%  block form_errors %}
    {% include "form/errors.html.twig" %}
{% endblock form_errors %}