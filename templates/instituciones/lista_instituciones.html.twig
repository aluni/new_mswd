{% extends "base.html.twig" %}

{% block navigation %}
    {% include 'nav/menu-simple.html.twig'%}
{% endblock %}

{% block content %}
    <div ng-app="institucionesApp" class="container last">
        <h2>Lista de Instituciones <span class="inverso">| List of Companies</span></h2>
        {% if is_granted('ROLE_ADMIN') %}
            <a target="_blank" class="btn btn-estud" href="{{  url('easyadmin') }}">
                <i class="fa fa-edit"></i> Editar instituciones
            </a>
        {% endif %}
        <div id="mensajeEspera" class="row">
            <div style="text-align: center;">
                <h3><i class="fa fa-spinner fa-spin"></i> Cargando <span class="inverso">| Loading ...</span></h3>
            </div>
        </div>
        <div class="seccionAngular" ng-controller="Instituciones">
            {% include 'instituciones/lista.html.twig' %}
        </div>
    </div>
{% endblock content %}

{% block custom_stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/mswd-estud.css') }}">
    <link rel="stylesheet" href="{{ asset('css/instituciones.css') }}">
{% endblock %}

{% block javascripts %}
    <script>
        var institucionesREST = "{{ institucionesREST }}";
    </script>
    {% block importmap %}{{ importmap('angular_app') }}{% endblock %}
{% endblock %}